<div class="flex justify-between m-b-15">
  <ol class="breadcrumb float-xl-left">
    <li id="li_nav_level_1" class="breadcrumb-item"><a href="javascript:;" class="">首页</a></li>
    <li id="li_nav_level_2" class="breadcrumb-item"><a href="javascript:;">工兵设置</a></li>
  </ol>
</div>

<div class="panel panel-inverse">
  <div class="panel-body">
    <div class="row">
      <div class="col-12">
        <button class="btn btn-sm btn-primary pull-right" onclick="add_soldier()"><i class="fa fa-plus"></i> 新增</button>
      </div>
    </div>
    <div class="row m-t-15">
      <div class="col-12">
        <table id="table_soldiers"></table>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="modal_new" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header text-center">
        <h4 class="modal-title">新增工兵</h4>
      </div>
      <form id="form_new">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <div class="modal-body">
          <div class="form-group">
            <label>等级(简体中文) <span class="text-danger">*</span></label>
            <input name="soldier[level]" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label>价格(CIC) <span class="text-danger">*</span></label>
            <input name="soldier[price]" class="form-control" type="number" min="0" required>
          </div>
          <div class="form-group">
            <label>雷成本(CIC) <span class="text-danger">*</span></label>
            <input name="soldier[bomb_cost]" class="form-control" type="number" min="0" required>
          </div>
          <div class="form-group">
            <label>雷收益(CIC) <span class="text-danger">*</span></label>
            <input name="soldier[bomb_benefit]" class="form-control" type="number" min="0" required>
          </div>
          <div class="form-group">
            <label>战力 <span class="text-danger">*</span></label>
            <input name="soldier[power]" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label>雇佣周期(天) <span class="text-danger">*</span></label>
            <input name="soldier[duration]" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label>单用户最多雇佣数量 <span class="text-danger">*</span></label>
            <input name="soldier[max_employ_amount]" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label>贡献 <span class="text-danger">*</span></label>
            <input name="soldier[contribution]" class="form-control" type="text" required>
          </div>
          <div class="form-group">
            <label>图片 <span class="text-danger">*</span></label>
            <input name="soldier[image]" type="file" class="form-control" accept="image/png" required>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
          <button type="submit" class="ladda-button btn btn-success" data-style="zoom-in">确定</button>
        </div>
      </form>
    </div>
  </div>
</div>

